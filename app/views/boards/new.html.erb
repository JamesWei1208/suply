<%= form_for @board, :url => :boards do |f| %>

	<% if @board.errors.any? %>
      <ul>
      <% @board.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<div>
	<%= f.collection_select( :category_id, Category.all, :id, :name) %>
</div>

<div >
<%= f.label :title, "Title" %>
<%= f.text_field :title %>
</div>

<div >
<%= f.label :content, "Content" %>
<%= f.text_area :content %>
</div>

    <%= f.submit "Create" %>

<% end %>